@model ADOTaskbook.Models.TaskModel

@{
    ViewData["Title"] = "Update Task";
}

<h1>Update Task</h1>

<div>
    <form asp-controller="Task" asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AssignedBy">Assigned By:</label>
            <input asp-for="AssignedBy" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AssignedTo">Assigned To:</label>
            <input asp-for="AssignedTo" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Duration">Duration:</label>
            <input asp-for="Duration" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Date">Date:</label>
            <input asp-for="Date" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-controller="Task" asp-action="View" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
