@model ADOTaskbook.Models.TaskModel

@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<div>
    <h4>Are you sure you want to delete this task?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Assigned By:</dt>
        <dd class="col-sm-10">@Model.AssignedBy</dd>

        <dt class="col-sm-2">Assigned To:</dt>
        <dd class="col-sm-10">@Model.AssignedTo</dd>

        <dt class="col-sm-2">Duration:</dt>
        <dd class="col-sm-10">@Model.Duration</dd>

        <dt class="col-sm-2">Date:</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>
    </dl>
    <form asp-controller="Task" asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="Task" asp-action="View" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
